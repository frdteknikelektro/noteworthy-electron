{
  "name": "noteworthy-note-taker",
  "productName": "Noteworthy",
  "description": "Beautiful automatic note taker that captures microphone + system audio and stores local notes.",
  "keywords": [
    "notes",
    "transcription",
    "electron",
    "openai",
    "audio"
  ],
  "main": "./main.js",
  "version": "1.0.0",
  "author": "Alec Armbruster <alectrocute@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "start": "npm run build:renderer && electron .",
    "dist": "npm run build:renderer && electron-builder --mac"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "electron-audio-loopback": "^1.0.5",
    "lucide-react": "^0.553.0",
    "react": "^18.3.0",
    "react-audio-visualize": "^1.2.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.15",
    "electron": "35.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^4.1.17",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.alectrocute.noteworthy",
    "productName": "Noteworthy",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      ".env",
      "node_modules/**/*"
    ]
  }
}
